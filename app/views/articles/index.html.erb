<h1>Articles</h1>
<p> <%= Article.public_count %> articles</p>

<ul>
  <% @articles.each do |article| %>
    <% unless article.archived? %>
    <li>
      <a href="/articles/<%= article.id %>">
        <%= article.title %>
      </a>
    </li>
    <% end %>
  <% end %>
</ul>

<%= link_to "New Article", new_article_path %>

